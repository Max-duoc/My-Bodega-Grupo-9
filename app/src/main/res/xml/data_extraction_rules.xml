<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Excluir archivos sensibles del backup en la nube -->
        <exclude domain="database" path="mybodega.db" />
        <exclude domain="database" path="mybodega.db-shm" />
        <exclude domain="database" path="mybodega.db-wal" />
    </cloud-backup>

    <device-transfer>
        <!-- Permitir transferencia de preferencias al cambiar de dispositivo -->
        <include domain="sharedpref" path="." />
    </device-transfer>
</data-extraction-rules>